{{{ before-widget }}}

	<div class="testimonial">
		{{# navigation }}
			<a class="testimonial__carousel  testimonial__carousel--left" href="#carousel-testimonials-{{{ widget-id }}}" data-slide="prev"><i class="fa  fa-chevron-left" aria-hidden="true"></i><span class="sr-only" role="button">{{ next-text }}</span></a>
		{{/ navigation }}

		<h2 class="widget-title">{{{ title }}}</h2>

		{{# navigation }}
			<a class="testimonial__carousel  testimonial__carousel--right" href="#carousel-testimonials-{{{ widget-id }}}" data-slide="next"><i class="fa  fa-chevron-right" aria-hidden="true"></i><span class="sr-only" role="button">{{ previous-text }}</span></a>
		{{/ navigation }}

		<div id="carousel-testimonials-{{{ widget-id }}}" class="carousel slide" {{{ slider-settings }}}>
			<!-- Wrapper for slides -->
			<div class="carousel-inner" role="listbox">
				<div class="item active">
					<div class="row">
						{{# testimonials }}
							{{{ more-at-once }}}
							<div class="col-xs-12  col-sm-{{ spans }}">
								<blockquote>
									<p class="testimonial__quote">
										{{ quote }}
									</p>
									<cite class="testimonial__author">
										{{ author }}
									</cite>

									{{# author_description }}
										<div class="testimonial__author-description">
											{{ author_description }}
										</div>
									{{/ author_description }}

									{{# display-ratings }}
										<div class="testimonial__rating">
											{{# rating }}
												<i class="fa  fa-star"></i>
											{{/ rating }}
										</div>
									{{/ display-ratings }}
								</blockquote>
							</div>
						{{/ testimonials }}
					</div>
				</div>
			</div>
		</div>
	</div>

{{{ after-widget }}}